# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 0

[*.css]
indent_size = 4

[*.sass]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.pug]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 0
trim_trailing_whitespace = false
